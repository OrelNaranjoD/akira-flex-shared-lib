{
  "name": "@orelnaranjod/flex-shared-lib",
  "version": "1.4.1",
  "description": "Shared lib for AkiraFlex projects",
  "author": "Orel Naranjo",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/OrelNaranjoD/akira-flex-shared-lib.git"
  },
  "bugs": {
    "url": "https://github.com/OrelNaranjoD/akira-flex-shared-lib/issues"
  },
  "homepage": "https://github.com/OrelNaranjoD/akira-flex-shared-lib#readme",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:packages": "tsx scripts/write-subpath-package-jsons.ts",
    "build:types": "tsc -p tsconfig.types.json",
    "build:all": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types && npm run build:packages",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-angular": "^8.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "files": [
    "dist/cjs",
    "dist/esm",
    "dist/types",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./cjs/index.js",
      "import": "./esm/index.js"
    }
  }
}
