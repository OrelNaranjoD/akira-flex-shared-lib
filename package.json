{
  "name": "@akirasoftware/flex-shared-lib",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared lib for AkiraFlex projects",
  "author": "Orel Naranjo",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/OrelNaranjoD/akira-flex-shared-lib.git"
  },
  "bugs": {
    "url": "https://github.com/OrelNaranjoD/akira-flex-shared-lib/issues"
  },
  "homepage": "https://github.com/OrelNaranjoD/akira-flex-shared-lib#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "release": "semantic-release",
    "lint": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "exports": {
    ".": "./dist/index.js",
    "./lib/*": "./dist/lib/*"
  }
}
